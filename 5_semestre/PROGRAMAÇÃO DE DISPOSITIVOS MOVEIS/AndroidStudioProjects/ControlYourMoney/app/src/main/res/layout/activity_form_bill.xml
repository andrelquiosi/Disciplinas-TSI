<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.CategoryFormActivity">

        <TextView
            android:id="@+id/billFormBillTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Despesas de Casa" />

        <EditText
            android:id="@+id/billFormBillName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:hint="@string/expense"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/billFormBillTitle" />

        <EditText
            android:id="@+id/billFormBillDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/payday"
            android:inputType="date"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/billFormBillName"
            app:layout_constraintStart_toStartOf="@id/billFormBillName"
            app:layout_constraintTop_toBottomOf="@+id/billFormBillName" />

        <EditText
            android:id="@+id/billFormBillValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/value_to_pay"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/billFormBillDate"
            app:layout_constraintStart_toStartOf="@id/billFormBillDate"
            app:layout_constraintTop_toBottomOf="@+id/billFormBillDate" />

        <Button
            android:id="@+id/billFormBillSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billFormBillValue"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".CadastroConta">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:text="Despesas da Casa"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/despesa" />

        <EditText
            android:id="@+id/ed_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5sp"
            android:layout_marginTop="-10sp"
            android:hint="@string/descricao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="65sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/valor" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/vencimento" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_valor"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5sp"
                android:layout_marginRight="10sp"
                android:layout_weight="2"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/ed_vecimento"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="2"
                android:clickable="true"
                android:editable="false"
                android:onClick="selecionarData" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_confirmar"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:onClick="adicionar"
                android:text="@string/adicionar" />

            <Button
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:onClick="cancelar"
                android:text="@string/cancelar" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lista_contas"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />
</LinearLayout>